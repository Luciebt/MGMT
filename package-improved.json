{
  "name": "ableton-project-manager",
  "private": true,
  "version": "1.0.0",
  "description": "A modern Ableton Live project management application",
  "type": "module",
  "main": "electron.js",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "tsc -b && vite build",
    "build:electron": "electron-builder",
    "lint": "eslint . --ext ts,tsx,js,jsx",
    "lint:fix": "eslint . --ext ts,tsx,js,jsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "preview": "vite preview",
    "clean": "rimraf dist build node_modules/.cache",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/better-sqlite3": "^7.6.9",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/xml2js": "^0.4.14",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^2.0.4",
    "@vitest/ui": "^2.0.4",
    "concurrently": "^9.0.1",
    "electron": "^37.2.1",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^25.0.0",
    "rimraf": "^6.0.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^6.3.5",
    "vitest": "^2.0.4",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.yourcompany.ableton-project-manager",
    "productName": "Ableton Project Manager",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "electron.js",
      "preload.js",
      "src/main/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.music",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": [
    "ableton",
    "live",
    "music",
    "project",
    "management",
    "electron",
    "react"
  ]
}
